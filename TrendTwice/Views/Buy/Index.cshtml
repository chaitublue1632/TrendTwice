@model TrendTwice.Models.Sale

@{
    ViewBag.Title = "Buy";
}

@using (Html.BeginForm("Checkout","Buy", FormMethod.Post)) {
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ListingId)
<div style="padding-top:10px"></div>
<div class="container">
    <div class="row">
        <div class="col-md-1 col-lg-1">
            <img src="~/Content/Images/5.jpg" style="height:70px; padding-bottom:10px" />
            <img src="~/Content/Images/5.jpg" style="height:70px; padding-bottom:10px" />
            <img src="~/Content/Images/5.jpg" style="height:70px; padding-bottom:10px" />
            <img src="~/Content/Images/5.jpg" style="height:70px; padding-bottom:10px" />
        </div>
        <div class="col-md-4 col-lg-6">
            <img src="~/Content/Images/5.jpg" style="padding-left:10px; height:300px" />
        </div>
        <div class="col-md-3 col-lg-5">
            <table class="table table-hover">
                <tr>
                    <td>Price</td>
                    <td><b>$@Model.Price</b></td>                    
                </tr>
               <tr>
                   <td>Category </td>
                   <td>@Model.Category</td>
               </tr>
                <tr>
                    <td>Size</td>
                    <td>@Model.Size</td>
                </tr>
                <tr>
                    <td>Color</td>
                    <td>@Model.Color</td>
                </tr>
                <tr>
                    <td>Condition</td>
                    <td>@Model.Condition</td>
                </tr>                
            </table>
            <button type="submit" class="btn btn-success btn-lg">Buy</button>
        </div>
    </div>
</div>
 }

